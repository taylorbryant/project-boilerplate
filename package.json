{
  "name": "project-boilerplate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "npm run build && next export",
    "start": "next start",
    "fix:dependencies": "npm audit fix",
    "fix:import-sort": "import-sort --write '**/*.js'",
    "fix:lint": "eslint --ext .jsx --ext .js . --fix",
    "fix:prettier": "prettier --write '**/*.{js,css,md}'",
    "fix:tailwind-css-class-order": "rustywind --write .",
    "fix": "npm run fix:dependencies && npm run fix:tailwind-css-class-order && npm run fix:import-sort && npm run fix:lint && npm run fix:prettier"
  },
  "dependencies": {
    "lodash": "4.17.20",
    "next": "10.0.1",
    "react": "16.14.0",
    "react-dom": "16.14.0"
  },
  "devDependencies": {
    "babel-eslint": "10.1.0",
    "eslint": "7.13.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "4.3.0",
    "import-sort-cli": "6.0.0",
    "import-sort-parser-babylon": "6.0.0",
    "import-sort-style-module": "6.0.0",
    "lint-staged": "10.5.1",
    "prettier": "2.1.2",
    "rustywind": "0.6.7",
    "tailwindcss": "1.9.6"
  },
  "engines": {
    "node": "^12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "importSort": {
    ".js": {
      "parser": "babylon",
      "style": "module"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "npm run fix:prettier",
    "*.js": "npm run fix:import-sort && npm run fix:tailwind-css-class-order && npm run fix:lint"
  }
}
