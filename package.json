{
  "name": "project-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "npm run build && next export",
    "start": "next start",
    "fix:import-sort": "import-sort --write '**/*.js'",
    "fix:lint": "eslint --ext .jsx --ext .js . --fix",
    "fix:prettier": "prettier --write '**/*.{js,css,md,mdx}'",
    "fix": "npm run fix:lint && npm run fix:prettier && npm run fix:import-sort"
  },
  "dependencies": {
    "next": "9.2.0",
    "react": "16.12.0",
    "react-dom": "16.12.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "1.3.0",
    "autoprefixer": "9.7.4",
    "babel-eslint": "10.0.3",
    "eslint": "6.8.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.18.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "husky": "4.0.10",
    "import-sort-cli": "6.0.0",
    "import-sort-parser-babylon": "6.0.0",
    "import-sort-style-module": "6.0.0",
    "lint-staged": "9.5.0",
    "postcss-import": "12.0.1",
    "prettier": "1.19.1",
    "tailwindcss": "1.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,mdx}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
